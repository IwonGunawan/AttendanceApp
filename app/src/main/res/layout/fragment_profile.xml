<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9F9"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/blue" >
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval" />

        <ImageView
            android:id="@+id/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/home_margin_right"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_pencil" />

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/home_margin_left"
            android:layout_toStartOf="@+id/ic_edit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/lbl_profile"/>

        <RelativeLayout
            android:id="@+id/rl_box_check_in_out"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bg_home_check_in_out"
            android:layout_below="@+id/ic_edit"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sample_pic" />
            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/profile_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_profile_name"
                android:text="@string/profile_level" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_box_check_in_out"
            android:layout_marginLeft="@dimen/home_margin_left"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/landing_title"
            android:text="GENERAL" />


        <RelativeLayout
            android:id="@+id/rl_profile_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/home_margin_left"
            android:layout_marginRight="@dimen/home_margin_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_location_unselected"
            android:layout_below="@+id/tv_general">

            <RelativeLayout
                android:id="@+id/iv_img1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_tab_selected" >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/driving_license" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_general_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_black"
                android:layout_toEndOf="@+id/iv_img1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_nik_employee" />
            <TextView
                android:id="@+id/tv_general_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_img1"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_below="@+id/tv_general_title1"
                android:text="@string/nik_employee" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_profile_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/home_margin_left"
            android:layout_marginRight="@dimen/home_margin_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_location_unselected"
            android:layout_below="@+id/rl_profile_1">

            <RelativeLayout
                android:id="@+id/iv_img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_tab_selected" >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/notebook" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_general_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_black"
                android:layout_toEndOf="@+id/iv_img2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_address" />
            <TextView
                android:id="@+id/tv_general_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_img2"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_below="@+id/tv_general_title2"
                android:text="@string/address_employee" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_profile_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/home_margin_left"
            android:layout_marginRight="@dimen/home_margin_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_location_unselected"
            android:layout_below="@+id/rl_profile_2">

            <RelativeLayout
                android:id="@+id/iv_img3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_tab_selected" >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/unlock" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_general_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_black"
                android:layout_toEndOf="@+id/iv_img3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_change_pass" />
            <TextView
                android:id="@+id/tv_general_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_img3"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_below="@+id/tv_general_title3"
                android:text="@string/change_pass" />

        </RelativeLayout>



    </RelativeLayout>
</ScrollView>